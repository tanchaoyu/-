/* components/swipercp/swipercp.wxss */
@keyframes big {
  0% {
    height: 380rpx;
    width: 100%;
  }
  100% {
    height: 440rpx;
    width: 100%;
  }
}
@keyframes min {
  0% {
    height: 440rpx;
    width: 100%;
  }
  100% {
    height: 380rpx;
    width: 100%;
  }
}
.active {
  width: 100%;
  height: 440rpx;
  animation-name: big;
  animation-duration: 0.5s;
}

.side-image {
  width: 100%;
  height: 380rpx;
  animation-name: min;
  animation-duration: 0.5s;
}

.contain {
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.comment {
  width: 100%;
  height: 40rpx;
  line-height: 1.5;
}

.disappear {
  opacity: 0;
}
.functn {
  position: absolute;
  z-index: 5;
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}
.function {
  width: 48rpx;
  height: 48rpx;
}
.user {
  position: absolute;
  margin-top: 140rpx;
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.etext {
  font-size: 14px;
  margin: 10px;
}
.userlogo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50% 50%;
  margin: 6px;
}
.username {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}

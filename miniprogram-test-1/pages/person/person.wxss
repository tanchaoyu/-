.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.linkctn {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.link {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.linkimage {
  width: 200rpx;
  height: 200rpx;
}
.linktwoctn {
  width: 100%;
}
.linktwo {
  padding: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #f0f0f0;
}
.row {
  height: 60rpx;
  width: 60rpx;
  color: #f0f0f0;
}
